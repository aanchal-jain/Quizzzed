<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="320dp"
    android:layout_height="150dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/icon_trans"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/mexcellent"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to Quit the game in between?"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/htower"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:text="Yes"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:id="@+id/quit_dialog_yes"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:text="No"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:id="@+id/quit_dialog_no"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>