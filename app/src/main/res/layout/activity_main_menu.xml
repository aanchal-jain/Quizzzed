<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/defaultbg"
    android:id="@+id/main_menu_layout"
    tools:context=".MainMenuActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/trans_black"
            app:cardCornerRadius="10dp"
            android:elevation="50dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:src="@drawable/coin"
                android:id="@+id/coin_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0"
                android:layout_marginStart="40dp"
                android:paddingEnd="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/htower_italic"
                android:layout_toEndOf="@+id/coin_icon"
                android:id="@+id/coins_value"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@android:color/transparent"
            android:elevation="50dp"
            app:cardCornerRadius="15dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:id="@+id/profile_icon"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/title"
        android:layout_marginTop="-55dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start A Game"
        android:textColor="@color/white"
        android:background="@color/trans_black"
        android:layout_margin="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="50dp"
        android:textAllCaps="false"
        android:fontFamily="@font/htower"
        android:textSize="20sp"
        android:id="@+id/start_game"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:fontFamily="@font/htower"
        android:textSize="20dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Join A Game"
        android:textColor="@color/white"
        android:background="@color/trans_black"
        android:layout_margin="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="50dp"
        android:textAllCaps="false"
        android:fontFamily="@font/htower"
        android:textSize="20sp"
        android:id="@+id/join_game" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Exit"
            android:textColor="@color/white"
            android:background="@color/trans_black"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/logout"
            android:textAllCaps="false"
            android:fontFamily="@font/htower"
            android:textSize="20sp"
            android:id="@+id/exit"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="How To Play?"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/trans_black"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/dictionary"
            android:textAllCaps="false"
            android:fontFamily="@font/htower"
            android:textSize="20sp"
            android:id="@+id/how_to_play"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="About Us"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/trans_black"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/info"
            android:textAllCaps="false"
            android:fontFamily="@font/htower"
            android:textSize="20sp"
            android:id="@+id/about_us"
            />
    </LinearLayout>
</LinearLayout>